@import './palette'

textless-icon($icon, $color = n60, $position = relative)
  &
    if $position != none
      position $position
    color transparent
    overflow hidden
  &::before
    content $icon
    display flex
    font-family 'Apple Color Emoji', -apple-system, Helvetica, Arial, sans-serif
    justify-content center
    align-items center
    width 100%
    height 100%
    color $color

