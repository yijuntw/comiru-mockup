@import '~constants'

Section.Search.Placeholder
  &
    display flex
    flex-direction column
    justify-content center
    align-items center
    margin-top 5rem
    padding 2em 2em 2em 3em
    height auto
    cursor default
    color n40
  &::before
    margin-bottom .75rem
    font-size 3rem
  &.is-loading::before
    content $compass
    flash()
  &.has-no-result::before
    content $bowing

Main.Search
  &
    margin 1.25rem 0 1rem
  .result-desc
    margin-bottom 1rem
    padding-left .125rem
    font-size .875rem
    color n80

Article.Search
  &
    display grid
    gap .5em 1em
    grid-template-columns auto 12rem
    grid-template-rows 1rem auto 1rem
    margin-bottom 1rem
  header
    grid-column 1 / 1
    grid-row 1 / 1
    font-size .75rem
    color n50
  p
    grid-column 1 / 1
    grid-row 2 / 2
    line-height 1.3
    color n70
  time
    grid-column 1 / 1
    grid-row 3 / 4
    display flex
    align-items center
    font-size .75rem
    color n40
  .cover
    &
      grid-column 2 / 2
      grid-row 1 / 4
      justify-self stretch
      align-self center
      width 100%
      min-height 6.25rem
      background-color n10
      border-radius 4px
  @media only screen and (max-width: $small-layout-width)
    &
      grid-template-columns auto 4rem
    p
      max-height (.875rem * 1.3 * 3)
      overflow hidden
      display -webkit-box
      -webkit-line-clamp 3
      -webkit-box-orient vertical
    .cover
      min-height auto

a.result-item
  .placeholder
    $single-line-height = 1rem
    $gap = .5rem

    &
      position relative
      align-self center
      grid-column 1 / 2
      grid-row 1 / 3
      padding ($single-line-height + $gap) 0
      height ($single-line-height * 3) + ($gap * (3 - 1))
      flash(5s)
      background-color n20
      background-clip content-box
      color transparent
    &::before
    &::after
      content ''
      position absolute
      left 0
      display block
      height 1rem
      background-color n20
    &::before
      top 0
      width 30%
    &::after
      bottom 0
      width 70%
  &:nth-child(even) .placeholder
    &
      animation-delay .25s
      animation-duration 3s
    &::before
      width 16%
    &::after
      width 24%
